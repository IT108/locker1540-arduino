{
  "name": "Locker1540 extension",
  "version": "0.2",
  "description": "Extension for card reader. Works only with Locker1540 app!",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "file:///*",
    "management"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "js": ["js/action.js"]
    }
  ],
  "background": {
    "persistent":	false,
    "scripts": 		["js/background.js"]
  }
}